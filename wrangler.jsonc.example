{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "your-daemon-mcp",
	"main": "src/index.ts",
	"workers_dev": true,
	"compatibility_date": "2025-03-10",
	"compatibility_flags": ["nodejs_compat"],
	"migrations": [
		{
			"new_sqlite_classes": ["DaemonMCP"],
			"tag": "v1"
		}
	],
	"durable_objects": {
		"bindings": [
			{
				"class_name": "DaemonMCP",
				"name": "MCP_OBJECT"
			}
		]
	},
	// KV namespace for persistent registry storage
	// Create with: npx wrangler kv namespace create DAEMON_REGISTRY
	// Then add the id from the output below
	"kv_namespaces": [
		{
			"binding": "DAEMON_REGISTRY",
			"id": "YOUR_KV_NAMESPACE_ID"
		}
	],
	"observability": {
		"enabled": false
	}
	// Uncomment and customize for your domain:
	// "routes": [
	//   { "pattern": "mcp.daemon.yourdomain.com", "custom_domain": true }
	// ]
}
