{
	"name": "daemon-mcp",
	"version": "1.0.0",
	"description": "Daemon MCP - UL Community Registry and Telos personal daemon",
	"private": true,
	"workspaces": ["packages/*"],
	"scripts": {
		"format": "biome format --write",
		"lint:fix": "biome lint --fix",
		"type-check": "tsc --noEmit",
		"registry:dev": "cd packages/registry && bun run dev",
		"registry:deploy": "cd packages/registry && bun run deploy",
		"telos:dev": "cd packages/telos && bun run dev",
		"telos:deploy": "cd packages/telos && bun run deploy"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"@types/node": "^25.0.3",
		"typescript": "5.9.3"
	}
}
